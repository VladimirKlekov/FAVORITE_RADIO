<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="card_label_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#575757</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="card_divider_style">
        <item name="android:background">#14000000</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="TextInputLayoutOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/execution_priority_low</item>
    </style>

    <style name="materialButtonTheme" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">#2196F3</item>
        <item name="iconPadding">0dp</item>
        <item name="android:minWidth">18dp</item>
        <item name="android:minHeight">18dp</item>
    </style>


    <style name="Widget.AppTheme.ShareChekBox" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/share_chekbox_tint</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>

    </style>

    <style name="Btn_favorite" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/btn_favorite</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>

    </style>



</resources>